import cv2
import numpy as np
import time
from collections import deque

# -----------------------------------------
# USER SETTINGS
# -----------------------------------------
CAMERA_INDEX = 0
pivot = (320, 120)        # adjust for your setup
SMOOTHING_WINDOW = 5

# Raspberry Pi camera sees blue darker -> use wider range
BLUE_LOWER = np.array([85, 40, 30], dtype=np.uint8)
BLUE_UPPER = np.array([140, 255, 255], dtype=np.uint8)

angle_buffer = deque(maxlen=SMOOTHING_WINDOW)
velocity_buffer = deque(maxlen=SMOOTHING_WINDOW)

last_angle = None
last_time = time.time()

# -----------------------------------------
# INITIALISE CAMERA (Raspberry Pi safe)
# -----------------------------------------
cap = cv2.VideoCapture(CAMERA_INDEX)

# Pi cameras are slower → set lower resolution
cap.set(cv2.CAP_PROP_FRAME_WIDTH, 320)
cap.set(cv2.CAP_PROP_FRAME_HEIGHT, 240)

# Small warm-up time for Pi Camera
time.sleep(0.5)

if not cap.isOpened():
    print("Camera not found")
    exit()

print("Camera initialized. Tracking blue ball...")

# -----------------------------------------
# MAIN LOOP
# -----------------------------------------
while True:
    ret, frame = cap.read()
    frame = frame[40:440, 80:560]

    if not ret:
        print("Frame grab failed")
        break

    display = frame.copy()

    # Convert to HSV (Pi supports this 100%)
    hsv = cv2.cvtColor(frame, cv2.COLOR_BGR2HSV)

    # Mask for blue ball
    mask = cv2.inRange(hsv, BLUE_LOWER, BLUE_UPPER)

    # Clean mask for stability on Pi's noisy image
    mask = cv2.GaussianBlur(mask, (7, 7), 0)
    mask = cv2.erode(mask, None, iterations=1)
    mask = cv2.dilate(mask, None, iterations=2)

    # -----------------------------------------
    # FIND BLUE BALL
    # -----------------------------------------
    contours, _ = cv2.findContours(mask, cv2.RETR_EXTERNAL,
cv2.CHAIN_APPROX_SIMPLE)

    cx = cy = None

    if contours:
        # Largest contour = ball
        c = max(contours, key=cv2.contourArea)
        area = cv2.contourArea(c)

        if area > 100:  # ignore small noise
            M = cv2.moments(c)
            cx = int(M["m10"] / M["m00"])
            cy = int(M["m01"] / M["m00"])

            # Draw ball and pivot
            cv2.circle(display, (cx, cy), 6, (0, 0, 255), -1)
            cv2.circle(display, pivot, 6, (255, 255, 0), -1)
            cv2.line(display, pivot, (cx, cy), (255, 255, 0), 2)

            # -----------------------------------------
            # ANGLE COMPUTATION
            # -----------------------------------------
            dx = cx - pivot[0]
            dy = cy - pivot[1]

            # Angle wrt vertical axis (Pi safe)
            angle = np.degrees(np.arctan2(dx, dy))

            # Smooth angle
            angle_buffer.append(angle)
            smooth_angle = np.mean(angle_buffer)

            # -----------------------------------------
            # ANGULAR SPEED
            # -----------------------------------------
            now = time.time()
            dt = now - last_time
            last_time = now

            if last_angle is None:
                last_angle = smooth_angle
                velocity = 0
            else:
                dtheta = smooth_angle - last_angle

                # fix ±180° wrap-around
                if dtheta > 180: dtheta -= 360
                if dtheta < -180: dtheta += 360

                velocity = dtheta / dt
                last_angle = smooth_angle

            # Smooth velocity
            velocity_buffer.append(velocity)
            smooth_velocity = np.mean(velocity_buffer)

            # Print on screen
            cv2.putText(display, f"Angle: {smooth_angle:.2f} deg",
                        (20, 40), cv2.FONT_HERSHEY_SIMPLEX, 0.75,
(255,255,255), 2)

            cv2.putText(display, f"Angular Speed: {smooth_velocity:.2f} deg/s",
                        (20, 80), cv2.FONT_HERSHEY_SIMPLEX, 0.75, (0,255,0), 2)

    # Show windows (works on Pi with desktop)
    cv2.imshow("Mask", mask)
    cv2.imshow("Tracking", display)

    if cv2.waitKey(1) & 0xFF == ord('q'):
        break

cap.release()
cv2.destroyAllWindows()
